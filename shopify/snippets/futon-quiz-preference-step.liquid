<div id="preference-step" class="quiz-step" style="display: none;">
  <div class="max-w-2xl mx-auto">
    <div class="text-center mb-8">
      <h2 class="text-3xl font-bold text-foreground mb-4" id="preference-title">
        Hvilken matras fasthed foretrækker du?
      </h2>
      <p class="text-muted-foreground">
        Dette hjælper os med at finde den perfekte balance mellem komfort og støtte.
      </p>
    </div>

    <div id="preference-content">
      <!-- Single person preferences -->
      <div id="single-person-preferences" class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
        <button
          class="quiz-btn quiz-btn-option flex-col gap-3 h-auto p-6"
          data-preference="soft"
          onclick="futonQuiz.setPreference('person1', 'soft')"
        >
          <div class="text-4xl">☁️</div>
          <div>
            <div class="font-semibold">Blød</div>
            <div class="text-sm text-muted-foreground">Synker godt ned, omfavnende følelse</div>
          </div>
        </button>

        <button
          class="quiz-btn quiz-btn-option flex-col gap-3 h-auto p-6"
          data-preference="medium"
          onclick="futonQuiz.setPreference('person1', 'medium')"
        >
          <div class="text-4xl">🛏️</div>
          <div>
            <div class="font-semibold">Medium</div>
            <div class="text-sm text-muted-foreground">Perfekt balance mellem støtte og komfort</div>
          </div>
        </button>

        <button
          class="quiz-btn quiz-btn-option flex-col gap-3 h-auto p-6"
          data-preference="hard"
          onclick="futonQuiz.setPreference('person1', 'hard')"
        >
          <div class="text-4xl">🏔️</div>
          <div>
            <div class="font-semibold">Hård</div>
            <div class="text-sm text-muted-foreground">Fast støtte, minimal synkning</div>
          </div>
        </button>
      </div>

      <!-- Two person preferences -->
      <div id="two-person-preferences" style="display: none;">
        <div class="space-y-8 mb-8">
          <div>
            <h3 class="text-lg font-semibold mb-4">Person 1 fasthed præference:</h3>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
              <button
                class="quiz-btn quiz-btn-option flex-col gap-3 h-auto p-6"
                data-preference="soft"
                data-person="person1"
                onclick="futonQuiz.setPreference('person1', 'soft')"
              >
                <div class="text-4xl">☁️</div>
                <div>
                  <div class="font-semibold">Blød</div>
                  <div class="text-sm text-muted-foreground">Synker godt ned</div>
                </div>
              </button>

              <button
                class="quiz-btn quiz-btn-option flex-col gap-3 h-auto p-6"
                data-preference="medium"
                data-person="person1"
                onclick="futonQuiz.setPreference('person1', 'medium')"
              >
                <div class="text-4xl">🛏️</div>
                <div>
                  <div class="font-semibold">Medium</div>
                  <div class="text-sm text-muted-foreground">Balance</div>
                </div>
              </button>

              <button
                class="quiz-btn quiz-btn-option flex-col gap-3 h-auto p-6"
                data-preference="hard"
                data-person="person1"
                onclick="futonQuiz.setPreference('person1', 'hard')"
              >
                <div class="text-4xl">🏔️</div>
                <div>
                  <div class="font-semibold">Hård</div>
                  <div class="text-sm text-muted-foreground">Fast støtte</div>
                </div>
              </button>
            </div>
          </div>

          <div>
            <h3 class="text-lg font-semibold mb-4">Person 2 fasthed præference:</h3>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
              <button
                class="quiz-btn quiz-btn-option flex-col gap-3 h-auto p-6"
                data-preference="soft"
                data-person="person2"
                onclick="futonQuiz.setPreference('person2', 'soft')"
              >
                <div class="text-4xl">☁️</div>
                <div>
                  <div class="font-semibold">Blød</div>
                  <div class="text-sm text-muted-foreground">Synker godt ned</div>
                </div>
              </button>

              <button
                class="quiz-btn quiz-btn-option flex-col gap-3 h-auto p-6"
                data-preference="medium"
                data-person="person2"
                onclick="futonQuiz.setPreference('person2', 'medium')"
              >
                <div class="text-4xl">🛏️</div>
                <div>
                  <div class="font-semibold">Medium</div>
                  <div class="text-sm text-muted-foreground">Balance</div>
                </div>
              </button>

              <button
                class="quiz-btn quiz-btn-option flex-col gap-3 h-auto p-6"
                data-preference="hard"
                data-person="person2"
                onclick="futonQuiz.setPreference('person2', 'hard')"
              >
                <div class="text-4xl">🏔️</div>
                <div>
                  <div class="font-semibold">Hård</div>
                  <div class="text-sm text-muted-foreground">Fast støtte</div>
                </div>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="flex justify-between">
      <button class="quiz-btn quiz-btn-secondary h-10 px-4" onclick="futonQuiz.prevStep()">
        Tilbage
      </button>
      <button 
        id="preference-next-btn"
        class="quiz-btn quiz-btn-primary h-10 px-4" 
        onclick="futonQuiz.nextStep()"
        disabled
      >
        Fortsæt
      </button>
    </div>
  </div>
</div>