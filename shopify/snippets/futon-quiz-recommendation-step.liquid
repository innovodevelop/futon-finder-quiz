<div id="futon-quiz__recommendation-step" class="futon-quiz__step" style="display: none;">
  <div class="futon-quiz__container" style="max-width: 64rem; margin: 0 auto;">
    <!-- Loading State -->
    <div id="futon-quiz__recommendations-loading" class="futon-quiz__loading">
      <div class="futon-quiz__loading-spinner"></div>
      <h2 class="futon-quiz__title futon-quiz__mb-4">Finder dine perfekte matches...</h2>
      <p class="futon-quiz__description">
        Vi analyserer dine svar og finder de bedste futoner til dine behov.
      </p>
    </div>

    <!-- Results State -->
    <div id="futon-quiz__recommendations-results" style="display: none;">
      <div class="futon-quiz__text-center futon-quiz__mb-8">
        <h2 class="futon-quiz__title futon-quiz__mb-4">
          Dine Personlige Futon Anbefalinger
        </h2>
        <div id="futon-quiz__recommendations-greeting" class="futon-quiz__description futon-quiz__mb-6">
          <!-- Greeting will be populated by JavaScript -->
        </div>
      </div>

      <!-- Product Grid -->
      <div id="futon-quiz__recommendations-grid" class="futon-quiz__grid futon-quiz__grid--cols-1 futon-quiz__grid--md-cols-2 futon-quiz__gap-6 futon-quiz__mb-8">
        <!-- Product recommendations will be populated by JavaScript -->
      </div>

      <!-- Next Steps -->
      <div class="futon-quiz__info-box futon-quiz__mb-6">
        <h3 class="futon-quiz__subtitle futon-quiz__mb-4">Næste skridt:</h3>
        <div class="futon-quiz__space-y-2">
          <div class="futon-quiz__flex futon-quiz__items-center futon-quiz__gap-2">
            <div class="futon-quiz__bullet--success"></div>
            <span class="futon-quiz__option-description">Gennemse dine anbefalinger og vælg din favorit</span>
          </div>
          <div class="futon-quiz__flex futon-quiz__items-center futon-quiz__gap-2">
            <div class="futon-quiz__bullet--success"></div>
            <span class="futon-quiz__option-description">Tilføj til kurv eller se flere detaljer</span>
          </div>
          <div class="futon-quiz__flex futon-quiz__items-center futon-quiz__gap-2">
            <div class="futon-quiz__bullet--success"></div>
            <span class="futon-quiz__option-description">Vores team kontakter dig med personlig rådgivning</span>
          </div>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="futon-quiz__flex futon-quiz__justify-center futon-quiz__gap-4">
        <button class="futon-quiz__btn futon-quiz__btn--secondary" onclick="futonQuiz.restartQuiz()">
          Tag Test Igen
        </button>
      </div>
    </div>

    <!-- Empty State -->
    <div id="futon-quiz__recommendations-empty" class="futon-quiz__text-center" style="display: none;">
      <h2 class="futon-quiz__title futon-quiz__mb-4">
        Ingen anbefalinger fundet
      </h2>
      <p class="futon-quiz__description futon-quiz__mb-6">
        Vi kunne desværre ikke finde passende futoner baseret på dine svar. 
        Prøv at tag testen igen eller kontakt os direkte for personlig hjælp.
      </p>
      <button class="futon-quiz__btn futon-quiz__btn--primary" onclick="futonQuiz.restartQuiz()">
        Tag Test Igen
      </button>
    </div>
  </div>
</div>