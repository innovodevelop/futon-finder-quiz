    <div class="flex justify-between">
      <button class="quiz-btn quiz-btn-secondary h-10 px-4" onclick="futonQuiz.prevStep()">
        Tilbage
      </button>
      <button class="quiz-btn quiz-btn-primary h-10 px-4" onclick="futonQuiz.nextStep()">
        Fortsæt
      </button>
    </div>
  </div>
</div>