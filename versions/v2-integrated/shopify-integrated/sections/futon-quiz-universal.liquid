      "type": "collection",
      "id": "soft_collection",
      "label": "Soft Futons Collection"
    },
    {
      "type": "collection",
      "id": "medium_collection", 
      "label": "Medium Futons Collection"
    },
    {
      "type": "collection",
      "id": "hard_collection",
      "label": "Hard Futons Collection"
    },
